def options(opt):
	pass

def configure(conf):
	pass

def build(bld):
	bld(source   = bld.path.ant_glob('*.c'),
		target   = 'xar',
		features = 'c cprogram',
		includes = '.',
		use      = 'public filesystem_includes',
		rpath = bld.env.DEFAULT_RPATH,
		install_path = bld.env.BINDIR,
		subsystem = bld.env.CONSOLE_SUBSYSTEM
	)
