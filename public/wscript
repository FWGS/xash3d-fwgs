def configure(conf):
	# stub
	return

def build(bld):
	source = bld.path.ant_glob(['*.c'])
	libs = []
	includes = [ '.', '../common', '../engine' ]

	bld.stlib(
		source   = source,
		target   = 'public',
		features = 'c',
		includes = includes,
		use      = libs,
		install_path = bld.env.LIBDIR,
		subsystem = bld.env.MSVC_SUBSYSTEM
	)
